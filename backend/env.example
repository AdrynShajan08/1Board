# Zerodha Kite API Credentials
KITE_API_KEY=your_api_key_here
KITE_API_SECRET=your_api_secret_here
KITE_ACCESS_TOKEN=your_access_token_here

# Database Configuration
# For local development:
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zerodha_mf_dashboard
DB_USER=postgres
DB_PASSWORD=your_db_password

# For Render deployment (Render provides DATABASE_URL automatically):
# DATABASE_URL=postgresql://user:password@host:port/database
# If DATABASE_URL is set, it takes precedence over individual DB_* variables

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
# Development: http://localhost:3000
# Production (Vercel): https://your-app.vercel.app
FRONTEND_URL=http://localhost:3000

# Scheduler Configuration (cron format)
# Default: Every day at 6 PM IST (12:30 UTC)
FETCH_SCHEDULE=30 12 * * *
